<div class="tab-content container-fluid">
    <div id="tab-1" class="tab-pane fade in active">
		  <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 margin-top-6" role="dialog"> 
		    <div class="panel panel-info" >
		      <div class="panel-heading">
		        <div class="panel-title">Add Business</div>
		      </div> 
		      <div style="padding-top:30px" class="panel-body" >
		        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
		        <%=form_for :user_login,url: add_business_path,:html=>{:class=>"form-horizontal"} do |f|%> 
		          <%= f.hidden_field :type,:value=>params[:value]%>  
			          <div style="margin-bottom: 25px" class="input-group">
			              <select class="form-control" name="category" id="category" required="true">
			                <option value=""> - Select Category - </option>
				                <%@categories.each do |c|%>
				                 <option value="<%=c.id%>"><%=c.name%></option>
				                <%end%>
			              </select>
			          </div>    
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
		            <%=f.text_field :title,:class=>"form-control",:id=>"title",:placeholder=>" Please enter the title",:required=>"true"%>                                        
		          </div>
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
		            <%=f.text_area :description,:class=>"form-control",:id=>"description",:placeholder=>" Please enter the description",:required =>"true"%>                                       
		          </div>
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
		            <%=f.email_field :email,:class=>"form-control",:id=>"email-id",:placeholder=>" Please enter your Email-id",:required =>"true"%>                                        
		          </div>
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
		            <%=f.text_field :contact,:class=>"form-control",:id=>"contact",:placeholder=>" Please enter your Contact",:required=>"true"%>                                        
		          </div>
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-road"></i></span>
		            <%=f.text_field :street_address,:class=>"form-control",:id=>"street_address",:placeholder=>" Please enter your street_address",:required=>"true"%>                                        
		          </div> 
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
		            <%=f.text_field :city,:class=>"form-control",:id=>"city",:placeholder=>" Please enter your city",:required=>"true"%>                                        
		          </div> 
		           <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
		            <%=f.text_field :pin,:class=>"form-control",:id=>"pin",:placeholder=>" Please enter your pin",:required=>"true"%>                                        
		          </div> 
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
		            <%=f.text_field :state,:class=>"form-control",:id=>"state",:placeholder=>" Please enter your state",:required=>"true"%>                                        
		          </div> 
		           <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
		            <%=f.text_field :tag_line,:class=>"form-control",:id=>"tag_line",:placeholder=>" Please enter your tag",:required=>"true"%>                                        
		          </div>       
		          <div style="margin-bottom: 25px" class="input-group">
		            <span class="input-group-addon"><i class="glyphicon glyphicon-star"></i></span>
		            <%=f.text_field :rating,:class=>"form-control",:id=>"rating",
		            :placeholder=>"Please enter the rating",:required=>"true"%>
		          </div>
		          <div style="margin-top:10px" class="form-group">
		            <div class="col-sm-12 controls">
		              <%=f.button "Add new business" ,:class=>"btn btn-primary form-control",:id=>"user-signup"%>
		              <a href="#"></a>
		            </div>
		          </div>
		        <%end%>     
		      </div>                     
		    </div>
		  </div>
		</div>
	</div>	  