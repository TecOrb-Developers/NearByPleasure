  <div class="mainbox col-md-8 col-md-offset-3 col-sm-8 col-sm-offset-2" role="dialog"> 
    <div class="panel panel-info margin-top-6">
      <div class="panel-heading">
        <div class="panel-title hyper">User Login</div>
      </div> 
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%=form_for :user_login,url: business_index_path,:html=>{:class=>"form-horizontal"},method: :post  do |f|%> 
          <div class="input-group">  
           <label class="errors hid">Please enter a  user id</label>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%=f.email_field :email,:class=>"form-control",:id=>"user_id",:placeholder=>" Please enter your Email Id"%>                                        
          </div>
          <div class="input-group">
            <label class="errors hps">Please enter a valid password</label>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%=f.password_field :password,:class=>"form-control",:id=>"password",
            :placeholder=>"Please enter your password"%>
          </div>
         
          <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%=f.button "Sign-in to admin panel" ,:class=>"btn btn-primary form-control",:id=>"user_submit"%>
              <a href="#"></a>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12 control">
              <div style="border-top: 1px solid#ffb3d9;padding-top:15px; font-size:85%" >
                <a href="#">
                  If you Forgot your password or Hotel Id please contact to Super Admin. He will provide you the credientials after a short authentication process.
                </a>
              </div>
            </div>
          </div>    
        <%end%>     
      </div>                     
    </div>
  </div>



  <script type="text/javascript">
 $('.errors').hide();
 $('#user_submit').click(function(){
    $('.errors').hide();
    if($('#user_id').val().trim()=="")
    {
      $('.hid').show();
      return false;
    }
    else if($('#password').val().trim()=="")
    {

      $('.hps').show();
      return false;
    }
    else
    {
      return true;
    }

  });
</script>
