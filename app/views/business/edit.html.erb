  <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 margin-top-6" role="dialog"> 
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Edit User</div>
      </div> 
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%=form_for @user,:html=>{:class=>"form-horizontal"} do |f|%> 
          <div class="input-group">
            <label class="errors first">*Please enter your firstname</label>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%=f.text_field :fname,:class=>"form-control",:id=>"fname",:placeholder=>" Please enter your First Name"%>                                        
          </div>
          <div class="input-group">
            <label class="errors last">*Please enter your lastname</label>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%=f.text_field :lname,:class=>"form-control",:id=>"lname",:placeholder=>" Please enter your Last Name"%>                                        
          </div>
          <div class="input-group">
            <label class="errors cont">*Please enter your contact</label>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
            <%=f.text_field :contact,:class=>"form-control",:id=>"contact",:placeholder=>" Please enter your Contact",:required=>"true"%>    
          </div>         
          <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%=f.button "Edit Profile" ,:class=>"btn btn-primary form-control",:id=>"edit_user"%>
              <a href="#"></a>
            </div>
          </div>
        <%end%>     
      </div>                     
    </div>
  </div>




<script type="text/javascript">

 $('.errors').hide();
 
 $('#edit_user').click(function(){
    $('.errors').hide();
    if($('#fname').val().trim()=="")
    {
      $('.first').show();
      return false;
    }
    else if($('#lname').val().trim()=="")
    {

      $('.last').show();
      return false;
    }
    else if($('#contact').val().trim()=="")
    {
      $('.cont').show();
      return false;
    }
    else
    {
      return true;
    }

  });
</script>
