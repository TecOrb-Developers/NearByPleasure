  <div class="mainbox col-md-8 col-md-offset-3 col-sm-8 col-sm-offset-2" role="dialog"> 
    <div class="panel panel-info margin-top-6">
      <div class="panel-heading">
        <div class="panel-title hyper">Forgot Password</div>
      </div> 
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%=form_for :forgot,url: business_forgot_password_path,:html=>{:class=>"form-horizontal"},method: :post  do |f|%> 
          <div class="input-group">  
           <label class="errors eid">Please enter a  Email id</label>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <%=f.email_field :email,:class=>"form-control",:id=>"email_id",:placeholder=>" Please enter your Email Id"%>                                        
          </div>
          <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%=f.button "Submit" ,:class=>"btn btn-primary form-control",:id=>"forget_submit"%>
              <a href="#"></a>
            </div>
          </div>   
        <%end%>     
      </div>                     
    </div>
  </div>



<script type="text/javascript">
 $('.errors').hide();
 $('#forget_submit').click(function(){
    $('.errors').hide();
    if($('#email_id').val().trim()=="")
    {
      $('.eid').show();
      return false;
    }
    else
    {
      return true;
    }

  });



</script>
