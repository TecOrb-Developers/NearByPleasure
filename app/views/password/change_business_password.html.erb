  <div class="mainbox col-md-8 col-md-offset-3 col-sm-8 col-sm-offset-2" role="dialog"> 
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title" style="color:white">User Signup</div>
      </div> 
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%=form_for :password,url: password_change_path(:user_id=>@user.id),:html=>{:class=>"form-horizontal"} do |f|%> 
          <%= f.hidden_field :type,:value=>params[:value]%> 
          <div class="input-group">
            <label class="errors pass">*Please enter your password</label>
          </div>          
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%=f.password_field :password,:class=>"form-control",:id=>"password",
            :placeholder=>"Please enter your password",:required=>"true"%>
          </div>
          <div class="input-group">
            <label class="errors re-pass">*Please Re-enter your password</label>
          </div> 
          <div class="input-group">
            <label class="errors does-nt">*Password not match re-enter correct password</label>
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%=f.password_field :repeat_password,:class=>"form-control",:id=>"re-password",
            :placeholder=>"Please Re-enter your password",:required=>"true"%>
          </div>
          <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%=f.button "change password" ,:class=>"btn btn-primary form-control",:id=>"change-password"%>
              <a href="#"></a>
            </div>
          </div>
        <%end%>     
      </div>                     
    </div>
  </div>


<script type="text/javascript">

 $('.errors').hide();
 
 $('#change-password').click(function(){
    $('.errors').hide();
    if($('#password').val().trim()=="")
    {
      $('.pass').show();
      return false;
    }
    else if($('#re-password').val().trim()=="")
    {
      $('.re-pass').show();
      return false;
    }
    else if($('#password').val().trim()!=$('#re-password').val().trim())
    {
      
      $('.does-nt').show();
      $('#password').val("");
      $('#re-password').val("");
      return false;
    }
    else
    {
      return true;
    }

  });
</script>