<div class="form-group mail-body">
 <%=form_for :comment,url: create_admin_comment_path(@ticket.id),:html=>{:class=>"form-horizontal"} do |f|%>
    <div class="input-group">
      <label class="errors comment">*Please enter the comment</label>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'Enter your comment:' %>
      <%= f.text_area :comment, rows: 3, :class =>'form-control',:id=>"comment", required: true %>
      <small class="label label-warning">Cannot be blank</small>
    </div>
    <%= f.submit 'Post', class: 'btn btn-primary btn-sm pull-right',:id=>"new_comment_submit" %><br><br>
  <% end %>
</div>