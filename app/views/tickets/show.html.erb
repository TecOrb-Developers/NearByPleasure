
<div class="wrapper wrapper-content">
  <div class="row">   
    <div class="col-lg-12 animated fadeInRight">
      <div class="col-lg-2 margin-top-3">
        <% if @ticket.status == true %>
          <div class="btn btn-success btn-sm">*Answered</div>
        <%else%>
          <div class="btn btn-danger btn-sm">*Unanswered</div>
        <%end%>
      </div> 
      <div class="mail-box-header">
        <div class="pull-right tooltip-demo">
          <%= link_to "All Tickets",user_tickets_path(current_business_user.id),:class=>"btn btn-warning btn-sm" %>
        </div>
        <h1></h1> 
      </div>
      <div class="mail-box">
        <%=render :partial => 'show'%>
        <%=render :partial => 'ticket_comments/index'%>
        <div class="row">
          <div class="col-lg-12"><br><br></div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
