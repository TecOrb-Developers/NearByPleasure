
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <%if params[:action]=="edit"%>
      <h2> Your Ticket Successfully Updated</h2>
    <%else%>
      <h2> Your ticket is successfully recieved.We will contact you with in 48 hours.</h2>
    <%end%>
  </div>
</div>
  
<div class="wrapper wrapper-content">
  <div class="row">    
    <div class="col-lg-12 animated fadeInRight">
      <div class="mail-box-header">
        <div class="pull-right tooltip-demo">
          <%= link_to "All Tickets",user_tickets_path(encrypt(current_business_user.id)),:class=>"btn btn-warning btn-sm" %>
        </div>
        <h1></h1> 
      </div>
      <div class="mail-box">
        <div class="mail-body">
            <div class="form-group">
              <div class="row">
                <div class="col-lg-2">
                  <label><h4>Title:</h4></label>
                </div>
                <div class="col-lg-8 alert alert-danger">
                 <h4><%=@ticket.title%></h4>
                </div>
                <div class="col-lg-2">
                  <% if @ticket.status %>
                    <div class="label label-primary">*Answered</div>
                  <%else%>
                    <div class="label label-danger">*Unanswered</div>
                  <%end%>
                </div>
              </div>
              <hr>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-lg-2">
                  <label><h4>Content:</h4></label>
                </div>
                <div class="col-lg-8 alert alert-warning">
                  <h4><%=@ticket.content%></h4>
                </div>
              </div>
            </div>
        </div>
        <div class="chat">
          <div class="row">
            <%@comments.each do |comment|%>
              <% if current_business_user.id==comment.user_id %>
                <div class="row">
                  <div class="col-lg-5 bubble me">
                    <strong> Me : </strong> <span class="pull-right"><%="#{time_ago_in_words(comment.created_at)} ago "%></span><br>              
                    <%= comment.comment %><br>
                  </div>
                </div>
              <%else%>
                <div class="col-lg-5 bubble you">
                  <strong> Help Support : </strong> <span class="pull-right"><%="#{time_ago_in_words(comment.created_at)} ago "%></span><br>
                  <%= comment.comment%><br>
                </div>
              <%end%>
            <%end%>   
          </div>
        </div>
        <div class="form-group mail-body">
         <%=form_for :comment,url: user_ticket_ticket_comments_path(current_business_user,@ticket.id),:html=>{:class=>"form-horizontal"} do |f|%>
            <div class="input-group">
              <label class="errors comment">*Please enter the comment</label>
            </div>
            <div class="form-group">
              <%= f.label :comment, 'Enter your comment:' %>
              <%= f.text_area :comment, rows: 3, :class =>'form-control',:id=>"comment", required: true %>
              <small class="label label-warning">Cannot be blank</small>
            </div>
            <%= f.submit 'Post', class: 'btn btn-primary btn-sm pull-right',:id=>"new_comment_submit" %><br><br>
          <% end %>
        </div>
        <div class="row">
          <div class="col-lg-12"><br><br></div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>



<script type="text/javascript">

 $('.errors').hide();
 
 $('#new_comment_submit').click(function(){
    $('.errors').hide();

    if($('#comment').val().trim()=="")
    {
      $('.comment').show();
      return false;
    }
    else
    {
      return true;
    }

  });
</script>