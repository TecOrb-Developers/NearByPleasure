<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2> Settings</h2>
  </div>
</div>
   <div class="mainbox col-md-10 col-md-offset-1" role="dialog"> 
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title" style="color:white">Generate Ticket</div>
      </div> 
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%=form_for :ticket,url: user_tickets_path(current_business_user),:html=>{:class=>"form-horizontal"} do |f|%>
         <div class="input-group">
            <label class="errors title">*Please enter your title</label>
          </div>   
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="fa fa-text-width"></i></span>
            <%=f.text_field :title,:class=>"form-control",:id=>"title",:placeholder=>" Please enter your title",:required=>"true"%>               
          </div>
           <div class="input-group">
            <label class="errors content">*Please enter the content</label>
          </div>           
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%=f.text_area :content,:class=>"form-control",:id=>"content",
            :placeholder=>"Please enter your content",:required=>"true"%>
          </div>
          <div style="margin-bottom: 25px" class="col-lg-12 input-group">
            <select class="form-control" name="subcategory" id="subcategory" required="true">
              <option value=""> - Select subategory - </option>
                <%@subcategories.each do |c|%>
                 <option value="<%=c.id%>"><%=c.title%></option>
                <%end%>
            </select>
          </div> 
          <div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%=f.button "Generate Ticket" ,:class=>"btn btn-primary form-control",:id=>"user_ticket"%>
              <a href="#"></a>
            </div>
          </div>
        <%end%>     
      </div>                     
    </div>
  </div>



<script type="text/javascript">

 $('.errors').hide();
 
 $('#user_ticket').click(function(){
    $('.errors').hide();

    if($('#title').val().trim()=="")
    {
      $('.title').show();
      return false;
    }
    else if($('#content').val().trim()=="")
    {
      $('.content').show();
      return false;
    }
    else
    {
      return true;
    }

  });
</script>