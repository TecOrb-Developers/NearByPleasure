<div class="mail-body">
  <div class="form-group">
    <div class="row">
      <div class="col-lg-2">
        <label><h4>Title:</h4></label>
      </div>
      <div class="col-lg-8 alert alert-danger">
       <h4><%=@ticket.title%></h4>
      </div>
    </div>
    <hr>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-2">
        <label><h4>Content:</h4></label>
      </div>
      <div class="col-lg-8 alert alert-warning">
        <h4><%=@ticket.content%></h4>
      </div>
    </div>
  </div>
</div>
<div class="chat">
<div class="row">
  <%@comments.each do |comment|%> 
    <%if @admin == nil%>
      <%if current_business_user.id!=comment.user_id%>
        <div class="row">
          <div class="col-lg-5 bubble me">
           <strong> Admin : </strong> <span class="pull-right"><%="#{time_ago_in_words(comment.created_at)} ago "%></span> <br>                     
            <%= comment.comment %><br>
          </div>
        </div>
      <%else%>
          <div class="row">
            <div class="col-lg-5 bubble you">
              <strong><%=comment.user.fname%>: </strong> <span class="pull-right"><%="#{time_ago_in_words(comment.created_at)} ago "%></span><br>      
              <%= comment.comment %><br>
            </div>
          </div>
      <%end%>
    <%else%> 
      <% if current_business_user.id==comment.user_id %>
        <div class="row">
            <div class="col-lg-5 bubble me">
              <strong> Me: </strong> <span class="pull-right"><%="#{time_ago_in_words(comment.created_at)} ago "%></span> <br>              
              <%= comment.comment %><br>
            </div>
        </div>
      <%else%>
        <div class="row">
          <div class="col-lg-5 bubble you">
            <strong> Help support : </strong> <span class="pull-right"><%="#{time_ago_in_words(comment.created_at)} ago "%></span><br>
              <%= comment.comment %><br>
          </div>
        </div>  
      <%end%> 
    <%end%>  
  <%end%>   
</div>
</div>
