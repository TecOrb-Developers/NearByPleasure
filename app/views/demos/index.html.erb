<div class="row">
	<img src="/assets/dessous-banner.jpg" width="100%;" height="300vh;">
</div>
<div class="container">
	<div class="im-centered">
		<div class="row bg-white">
			<div class="formarg">
			  <form role="form">
				  <div class=" form-group col-lg-12 " style="border: thin solid #F1F1F1; background-color:#F1F1F1;border-radius: 5px;">
				  	<div class=" col-lg-12 formfnt">
				      <h2 style="float:left;">Listing Name<h2>
				    </div> 
				    <div class=" col-lg-12"> 	
				     <hr>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">  
				     <input type="text" class="form-control input-lg round-input" id="name" placeholder="your listing name">
				    </div>  
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Tagline(Optional)<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">  
				     <input type="text" class="form-control input-lg round-input" id="tag" placeholder="Speciality Coffee Shop">
				    </div>   
				  </div>
				  <div class="form-group ">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Description<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">
				     <textarea rows="7" cols="50" class="form-control" id="desc" class ='ckeditor' %> </textarea> 
				    </div>   
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Listing Category<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">  
				     <input type="text" class="form-control input-lg round-input" id="cat" placeholder="Choose one or more categories">
				    </div>   
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Location (Optional)<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">  
				     <input type="text" class="form-control input-lg round-input" placeholder="e.g 34 Wigmore Street, London" value="" maxlength="" id="loc">
				     <small class="field-description">Leave this blank if the location is not important.</small>
				    </div>   
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Listing Region<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">
				      <select class="form-control input-lg round-input" id="list" placeholder="city of London">
	            <option> city of London</option>
	              <option> Select 1</option>
	              <option> Select 2</option>
	              <option> Select 3</option>
	              <option> Select 4</option>
	            </select>  
				    </div>   
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Gallery Images (Optional)<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">
				      <input type="image" src="/assets/a6.jpg" alt="Submit" width="100" height="100">
				    </div>   
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Phone (Optional)<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">  
				     <input type="text" class="form-control input-lg round-input" placeholder="e.g +42-898-3464" value="" maxlength="" id="phone">
				    </div>   
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Website (Optional)<h4>
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">  
				     <input type="text" class="form-control input-lg round-input" placeholder="e.g yourwebsite.com, London" value="" maxlength="" id="web">
				    </div>   
				  </div>
				  <div class="form-group">
				    <div class=" col-lg-12 formfnt">
				      <h4 style="float:left;">Twitter Username<h4> (Optional)
				    </div>
				    <div class=" col-lg-12 margin-bottom-5">  
				     <input type="text" class="form-control input-lg round-input " placeholder="@yourcompany" value="" maxlength="" id="twit">
				    </div>   
				  </div>
				  <div class="form-group col-lg-12">
				   <button type="submit" class="btn btn-danger form-control">Preview</button>
				  </div> 
				</form>
		  </div>
		</div>
  </div>		
</div>


<script type="text/javascript">

	$(document).ready(function() {
        if ($('textarea').length > 0) {
            var data = $('textarea');
            $.each(data, function(i) {
                CKEDITOR.replace(data[i].id);
            });
        }


    });
    </script>