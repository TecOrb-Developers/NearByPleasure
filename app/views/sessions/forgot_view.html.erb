
<div class="container" style="margin-top: 5%">
  <div class="row">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="text-center">
              <h3><i class="fa fa-lock fa-4x"></i></h3>
              <h2 class="text-center">Reset Password?</h2>
              <p>You can reset your password here.</p>
                <div class="panel-body">
                  
                  <form class="form" action="<%=update_password_path%>" method="post">
                    <fieldset>
                      <input type="hidden" name="user_id" value="<%=@user.id%>">
                      <div class="form-group">
                          <input type="password" name="password"  placeholder="Set your new password" id="pass" class="form-control"  required="" autocomplete="off">
                      </div>
                      <div class="form-group">
                          <input type="password" name="password_confirm" placeholder="Confirm your new password" id="con_pass" class="form-control"  required="" autocomplete="off">
                      </div>
                      <div class="form-group">
                        <input class="btn btn-primary" id="submit-password" value="Update My Password" type="submit">
                      </div>
                    </fieldset>
                  </form>
                  
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$('#submit-password').click(function(){
   pass = $('#pass').val().trim()
  con_pass = $('#con_pass').val()
  if(pass!=con_pass || pass=='')
  {
    alert("Password does not matched")
    $('#pass').val('')
    $('#con_pass').val('')
    return false
  }

})
 
</script>
